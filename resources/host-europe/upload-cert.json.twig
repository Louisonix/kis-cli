            "assertedEvents": [
                {
                    "type": "navigation",
                    "url": "https://kis.hosteurope.de/administration/webhosting/admin.php",
                    "title": ""
                }
            ]
        },
        {
            "type": "customStep",
            "name": "js",
            "source": "window._wd_set_result($('.fl_welcome')[0].innerText);"
        }
    ]
